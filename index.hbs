{{!-- Add layout --}}
{{!< default}}
<header class="godo-header {{#if @blog.cover}}cover" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
  <article class="godo-header-wrap">
    {{!-- Blog name --}}
    <h1 class="godo-header-title animated bounceInDown">{{@blog.title}}</h1>
    {{!-- Blog description --}}
    <p class="godo-header-description animated bounceIn">{{@blog.description}}</p>
  </article>
</header>
{{! The tag below includes the post loop - partials/loop.hbs }}
{{> "loop"}}
